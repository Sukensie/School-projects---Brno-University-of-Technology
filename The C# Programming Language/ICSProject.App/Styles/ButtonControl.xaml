<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:ICSProject.App.Controls">

    <Style x:Key="ButtonIconControl" TargetType="{x:Type Border}">
        <Setter Property="MaxHeight" Value="40"/>
        <Setter Property="Margin" Value="20 0"/>
        <Setter Property="Padding" Value="7.5 2.5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource BlueLightBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GrayDarkBrush}"/>
        <Setter Property="CornerRadius" Value="12.5"/>

        <Style.Resources>
            <Style TargetType="{x:Type Image}">
                <Setter Property="Margin" Value="5 "/>
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Padding" Value="0 5"/>
                <Setter Property="Foreground" Value="{StaticResource BlackDarkBrush}"/>
            </Style>
        </Style.Resources>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BlueBrush}"/>
                <Setter Property="Cursor" Value="Hand" />
            </Trigger>
        </Style.Triggers>
    </Style>

