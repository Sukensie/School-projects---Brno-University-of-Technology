<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <SolidColorBrush x:Key="BlueLightBrush"     Color="{StaticResource BlueLight}"/>
    <SolidColorBrush x:Key="BlueBrush"          Color="{StaticResource Blue}"/>
    <SolidColorBrush x:Key="BlueDarkBrush"      Color="{StaticResource BlueDark}"/>
    <SolidColorBrush x:Key="RedLightBrush"      Color="{StaticResource RedLight}"/>
    <SolidColorBrush x:Key="RedDarkBrush"       Color="{StaticResource RedDark}"/>
    <SolidColorBrush x:Key="GreenLightBrush"    Color="{StaticResource GreenLight}"/>
    <SolidColorBrush x:Key="GreenDarkBrush"     Color="{StaticResource GreenDark}"/>
    <SolidColorBrush x:Key="YellowLightBrush"   Color="{StaticResource YellowLight}"/>
    <SolidColorBrush x:Key="YellowDarkBrush"    Color="{StaticResource YellowDark}"/>
    <SolidColorBrush x:Key="GrayLightBrush"     Color="{StaticResource GrayLight}"/>
    <SolidColorBrush x:Key="GrayDarkBrush"      Color="{StaticResource GrayDark}"/>
    <SolidColorBrush x:Key="BlackLightBrush"    Color="{StaticResource BlackLight}"/>
    <SolidColorBrush x:Key="BlackDarkBrush"     Color="{StaticResource BlackDark}"/>
</ResourceDictionary>