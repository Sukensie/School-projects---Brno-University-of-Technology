<UserControl x:Class="ICSProject.App.Controls.DestinationText"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      x:Name="Self"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="150">
    <Grid DataContext="{Binding ElementName=Self}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock TextAlignment="Right" Margin="0,0,10,0" Text="{Binding Txt}" VerticalAlignment="Center" Height="16"></TextBlock>
        <TextBlock  Grid.Column="1" TextAlignment="Left" VerticalAlignment="Center"  Margin="10,0, 0,0" Text="{Binding Time}" Height="16"></TextBlock>
    </Grid>



</UserControl>
